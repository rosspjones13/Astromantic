<div class="login-form">
  <h1 class="h3 mb-3 font-weight-normal">Please Log In</h1>
  <%= form_tag login_path do %>
    <div class="form-field">
      <%= label_tag :username, "Username", class: "sr-only" %>
      <%= text_field_tag :username, nil, placeholder: "Username" %>
    </div>
    <div class="form-field">
      <%= label_tag :password, "Password", class: "sr-only" %>
      <%= password_field_tag :password, nil, placeholder: "Password" %>
    </div>
    <%= submit_tag "Log In", class: "btn btn-md btn-primary" %>
    <%= link_to "Sign Up", new_user_path, class: "btn btn-outline-secondary" %>
  <% end %>
</div>
