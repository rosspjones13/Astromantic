<main role="main" class="main login-container">
  <h1 class="login-title text-hide">Astromance</h1>
  <div class="login-form">
  <%= form_tag login_path do %>
    <div class="form-group">
      <%= label_tag :username, "Username", class: "sr-only" %>
      <%= text_field_tag :username, nil, placeholder: "Username", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password, "Password", class: "sr-only" %>
      <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
    </div>
    <div class="form-actions">
      <%= submit_tag "Log In", class: "btn btn-md btn-primary" %>
      <%= link_to "Sign Up", new_user_path, class: "btn btn-secondary" %>
    </div>
    <div class="error login-error"><%= flash["notice"] %></div>
  <% end %>
</div></main>