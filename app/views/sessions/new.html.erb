<div class="login-form">
  <h1 class="h3 mb-3 font-weight-normal">Astromance</h1>
  <%= form_tag login_path do %>
    <div class="form-group">
      <%= label_tag :username, "Username", class: "sr-only" %>
      <%= text_field_tag :username, nil, placeholder: "Username", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= label_tag :password, "Password", class: "sr-only" %>
      <%= password_field_tag :password, nil, placeholder: "Password", class: "form-control" %>
    </div>
    <%= submit_tag "Log In", class: "btn btn-md btn-primary" %>
    <%= link_to "Sign Up", new_user_path, class: "btn btn-outline-secondary" %>
  <% end %>
  <div class="error"><%= flash["notice"] %></div>
</div>