
<%= form_for @user do |f| %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :name%>
      <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>
    <div class="form-group col-md-3">
      <%= f.label :birthday %>
      <%= f.date_field :birthday, class: "form-control" %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control", placeholder: "email@example.com" %>
    </div>
    <div class="form-group custom-file col-md-4">
      <%= f.label :avatar%>
      <%= f.file_field :avatar, class: "form-control-file form-control" %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <%= f.label :username %>
      <div class="input-group">
      <div class="input-group-prepend"><span class="input-group-text">@</span></div>
        <%= f.text_field :username, class: "form-control" %>
      </div>
    </div>
    <% if new_user %>
      <div class="form-group col-md-4">
        <%= f.label :password %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group col-md-4">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
          <small class="form-text text-muted">Your password must match</small>
      </div>
    <% end %>
    </div>
  <%= f.submit nil, class: "btn btn-primary" %>
<% end %>
<% if !new_user %>
  <div class="mt-4">
    <%= button_to "Delete Account", @user, method: :delete, data: { confirm: "Really Delete Account?" }, class: "btn btn-danger" %>  
  </div>
<% end %>
