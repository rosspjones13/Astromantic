<div class="profile container"><div class="row">
  <div class="sidebar col-3">
    <div class="profile-photo">
      <%= image_tag @user.avatar_url, alt: @user.name %>
    </div>
    <h2 class="profile-name"><%= @user.name.titleize %></h2>
    <span class="profile-username">@<%= @user.username %></span>
    <span class="profile-birthday">Birthday: <%= @user.birthday_formatted %></span>

    <% if is_current_user? %>
      <div class="profile-actions">
        <%= link_to "Update Profile", edit_user_path(@user) %>
      </div>
    <% end %>
  </div>
  <main role="main" class="col">
    <%= render @user.astro %>
    <% if is_current_user? %>
      <%= render "matches" %>
    <% end %>
  </main>
</div></div>	
