<div class="card user-card"><a href="<%= user_path(user) %>">
  <%= image_tag user.card_avatar_url, alt: user.name, class: "card-img-top" %>
  <div class="card-body">
    <h5 class="card-title"><%= user.name.titleize %></h5>
    <p class="card-text"><strong><%= user.astro_sign %></strong> <%= user.age %> </p>
  </div>
</a></div>