<div class="matches">
  <h2 class="section-title">Matches</h2>
  <% if @user.matches.any? %>
    <div class="matches-list row">
    <% @user.sorted_matches.each do |match| %>
      <div class="col-sm-4"><%= render match %></div>
    <% end %>
  <% else %>
    <div class="empty-matches">
      <%= button_to "Find Matches", find_matches_user_path(@user), method: :post, class: "btn btn-info" %>
    </div>
  <% end %>
</div>